{
  "name": "signaali",
  "version": "0.0.2",
  "type": "module",
  "description": "A nice abstraction that's also flexible and performant state management tool",
  "module": "./dist/esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "npm run clean && tsdown && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist types",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "example": "node scripts/dev-example.js",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "state-management",
    "signals",
    "typescript"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "prettier": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3"
  }
}
